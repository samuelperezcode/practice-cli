{
  "name": "practice-cli",
  "bin": {
    "practice": "./dist/index.js"
  },
  "version": "0.0.0",
  "description": "A CLI app to practice and learn modern tools",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "link-cli": "pnpm unlink --global && pnpm link --global",
    "build": "NODE_ENV=production tsup",
    "build:docs": "typedoc --out docs ./src/index.ts",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "changeset": "changeset",
    "format": "biome check --write ./src",
    "check-format": "biome check ./src",
    "check-exports": "attw --pack .",
    "ci": "npm run check-exports && npm run check-format && npm run lint && npm run test:coverage && npm run build"
  },
  "keywords": [
    "cli"
  ],
  "author": {
    "name": "Samuel PÃ©rez",
    "email": "samuel.perez@ntsprint.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.0.2",
    "tsup": "^8.3.5",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "commander": "^13.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
